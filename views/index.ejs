<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    const ctx = document.getElementById('vegetablePriceChart').getContext('2d');
    const vegetablePriceChart = new Chart(ctx, {
        type: 'line',
        data: {
            labels: ['Week 1', 'Week 2', 'Week 3', 'Week 4'], // Example weeks or time intervals
            datasets: [{
                label: 'Tomatoes (₹)',
                data: [30, 32, 33, 30], // Example price data for tomatoes
                fill: false,
                borderColor: 'rgba(255, 99, 132, 1)', // Red line for tomatoes
                tension: 0.1
            },
            {
                label: 'Spinach (₹)',
                data: [40, 38, 41, 40], // Example price data for spinach
                fill: false,
                borderColor: 'rgba(54, 162, 235, 1)', // Blue line for spinach
                tension: 0.1
            }]
        },
        options: {
            responsive: true,
            plugins: {
                legend: {
                    position: 'top',
                },
                tooltip: {
                    callbacks: {
                        label: function(tooltipItem) {
                            return `₹ ${tooltipItem.raw}`;  // Display the price value on hover
                        }
                    }
                }
            },
            scales: {
                x: {
                    title: {
                        display: true,
                        text: 'Time (Weeks)' // X-axis label for time or week
                    }
                },
                y: {
                    beginAtZero: true,
                    title: {
                        display: true,
                        text: 'Price (₹)' // Y-axis label for price
                    }
                }
            }
        }
    });
</script>
