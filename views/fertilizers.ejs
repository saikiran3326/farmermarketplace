<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Fertilizers - Farmer Marketplace</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Roboto', sans-serif;
            margin: 0;
            background-color: #f3f4f6;
        }

        /* Sidebar styling */
        .sidebar {
            height: 100vh;
            width: 270px;
            background: linear-gradient(45deg, #2a9d8f, #264653);
            color: white;
            position: fixed;
            top: 0;
            left: 0;
            display: flex;
            flex-direction: column;
            padding-top: 20px;
            box-shadow: 2px 0 5px rgba(0, 0, 0, 0.2);
        }

        .sidebar h3 {
            text-align: center;
            font-size: 24px;
            font-weight: bold;
            margin-bottom: 40px;
            color: #e9c46a;
        }

        .nav-item a {
            color: white;
            text-decoration: none;
            font-size: 18px;
            padding: 15px 20px;
            display: flex;
            align-items: center;
            gap: 15px;
            transition: all 0.3s ease;
            border-radius: 8px;
        }

        .nav-item a:hover {
            background: rgba(233, 196, 106, 0.9);
            color: #264653;
            font-weight: bold;
        }

        /* Main content styling */
        .main-content {
            margin-left: 270px;
            padding: 20px;
        }

        .header {
            background: #e9c46a;
            color: #264653;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .header h1 {
            font-size: 30px;
            margin: 0;
        }

        .logout-btn {
            background-color: #e76f51;
            color: white;
            border: none;
            padding: 10px 20px;
            font-size: 16px;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        .logout-btn:hover {
            background-color: #d35400;
        }

        /* Fertilizer Section */
        .fertilizer-container {
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
            margin-top: 20px;
        }

        .fertilizer-box {
            background: linear-gradient(135deg, #e9c46a, #f4a261);
            color: #264653;
            padding: 20px;
            border-radius: 15px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            width: calc(33.33% - 20px);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        .fertilizer-box:hover {
            transform: scale(1.05);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.3);
        }

        .fertilizer-box h3 {
            font-size: 24px;
            margin-bottom: 10px;
        }

        .fertilizer-box p {
            font-size: 18px;
            margin: 0;
        }

        .fertilizer-box .btn {
            background-color: #264653;
            color: white;
            padding: 10px 20px;
            border-radius: 5px;
            text-decoration: none;
            font-size: 16px;
            margin-top: 10px;
            display: inline-block;
            transition: background-color 0.3s ease;
        }

        .fertilizer-box .btn:hover {
            background-color: #e76f51;
        }

        /* Add Fertilizer Form */
        .add-fertilizer-form {
            background-color: #ffffff;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            margin-top: 30px;
        }

        .add-fertilizer-form input, .add-fertilizer-form textarea {
            width: 100%;
            padding: 10px;
            margin-bottom: 15px;
            border-radius: 5px;
            border: 1px solid #ddd;
        }

        .add-fertilizer-form button {
            background-color: #264653;
            color: white;
            padding: 10px 20px;
            border-radius: 5px;
            border: none;
            font-size: 16px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        .add-fertilizer-form button:hover {
            background-color: #e76f51;
        }
    </style>
</head>
<body>

    <!-- Sidebar -->
    <div class="sidebar">
        <h3>Farmer Dashboard</h3>
        <ul class="nav flex-column">
            <li class="nav-item">
                <a href="/marketprice"><i class="fas fa-chart-line"></i> Market Prices</a>
            </li>
            <li class="nav-item">
                <a href="/addproduct"><i class="fas fa-plus-circle"></i> Add Products</a>
            </li>
            <li class="nav-item">
                <a href="#purchase-history"><i class="fas fa-history"></i> Purchase History</a>
            </li>
            <li class="nav-item">
                <a href="/loans"><i class="fas fa-hand-holding-usd"></i> Loans & Benefits</a>
            </li>
        </ul>
    </div>

    <!-- Main Content -->
    <div class="main-content">
        <!-- Header Section -->
        <div class="header">
            <h1>Organic Fertilizers</h1>
            <button class="logout-btn">Logout</button>
        </div>

        <!-- Fertilizer Content -->
        <div class="fertilizer-container">
            <% fertilizers.forEach(fertilizer => { %>
                <div class="fertilizer-box">
                    <% if (fertilizer.img) { %>
                        <img src="<%= fertilizer.img %>" alt="fertilizer Image">
                    <% } else { %>
                        <img src="https://via.placeholder.com/300x200" alt="Placeholder Image">
                    <% } %>
                    <div class="fertilizer-card-body">
                        <h5><%= fertilizer.name %></h5>
                        <p>₹<%= fertilizer.price %></p>
                    </div>
                    <div class="fertilizer-card-action">
                        <button class="btn-add-cart">Add to Cart</button>
                        <button class="btn-buy-now">Buy Now</button>
                    </div>
                </div>
            <% }) %>
        </div>

        <!-- Add Fertilizer Form -->
        <!-- <div class="add-fertilizer-form">
            <h2>Add New Organic Fertilizer</h2>
            <form method="post" action="/fertilizer">
                <input name="fertname" type="text" id="fertilizer-name" placeholder="Fertilizer Name" required>
                <input  name="fertprice" type="number" id="fertilizer-price" placeholder="Price (₹)" required>
                <textarea name="fertdesc" id="fertilizer-description" placeholder="Fertilizer Description" rows="4" required></textarea>
                <button type="submit">Add Fertilizer</button>
            </form>
        </div> -->
    </div>

</body>
</html>
