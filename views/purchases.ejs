<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Farmer Marketplace - Purchases</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Roboto', sans-serif;
            margin: 0;
            background-color: #f3f4f6;
        }

        /* Sidebar styling */
        .sidebar {
            height: 100vh;
            width: 270px;
            background: linear-gradient(45deg, #2a9d8f, #264653);
            color: white;
            position: fixed;
            top: 0;
            left: 0;
            display: flex;
            flex-direction: column;
            padding-top: 20px;
            box-shadow: 2px 0 5px rgba(0, 0, 0, 0.2);
        }

        .sidebar h3 {
            text-align: center;
            font-size: 24px;
            font-weight: bold;
            margin-bottom: 40px;
            color: #e9c46a;
        }

        .nav-item a {
            color: white;
            text-decoration: none;
            font-size: 18px;
            padding: 15px 20px;
            display: flex;
            align-items: center;
            gap: 15px;
            transition: all 0.3s ease;
            border-radius: 8px;
        }

        .nav-item a:hover {
            background: rgba(233, 196, 106, 0.9);
            color: #264653;
            font-weight: bold;
        }

        /* Main content styling */
        .main-content {
            margin-left: 270px;
            padding: 20px;
        }

        .header {
            background: #e9c46a;
            color: #264653;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .header h1 {
            font-size: 30px;
            margin: 0;
        }

        .logout-btn {
            background-color: #e76f51;
            color: white;
            border: none;
            padding: 10px 20px;
            font-size: 16px;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        .logout-btn:hover {
            background-color: #d35400;
        }

        /* Purchases Section Styling */
        .purchase-table-container {
            margin-top: 30px;
        }

        .purchase-table-container h2 {
            color: #264653;
            margin-bottom: 20px;
        }

        .table {
            background-color: white;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .table th {
            background-color: #264653;
            color: white;
        }

        .table td {
            color: #264653;
        }

        /* Table Pagination */
        .pagination {
            justify-content: center;
            margin-top: 20px;
        }

    </style>
</head>
<body>

    <!-- Sidebar -->
    <div class="sidebar">
        <h3>Farmer Dashboard</h3>
        <ul class="nav flex-column">
            <li class="nav-item">
                <a href="#market-prices"><i class="fas fa-chart-line"></i> Market Prices</a>
            </li>
            <li class="nav-item">
                <a href="#add-products"><i class="fas fa-plus-circle"></i> Add Products</a>
            </li>
            <li class="nav-item">
                <a href="#purchase-history"><i class="fas fa-history"></i> Purchase History</a>
            </li>
            <li class="nav-item">
                <a href="#fertilizers"><i class="fas fa-seedling"></i> Fertilizers</a>
            </li>
            <li class="nav-item">
                <a href="#loans-benefits"><i class="fas fa-hand-holding-usd"></i> Loans & Benefits</a>
            </li>
        </ul>
    </div>

    <!-- Main Content -->
    <div class="main-content">
        <!-- Header Section -->
        <div class="header">
            <h1>Purchase History</h1>
            <button class="logout-btn">Logout</button>
        </div>

        <!-- Purchases Table Section -->
        <div class="purchase-table-container">
            <h2>Recent Purchases</h2>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Purchase ID</th>
                        <th>Product Name</th>
                        <th>Quantity</th>
                        <th>Total Price (₹)</th>
                        <th>Date</th>
                        <th>Mode</th>
                    </tr>
                </thead>
                <tbody>
                    <%purchases.forEach(purchase=>{%>
                        <tr>
                            <td>#<%=purchase.id%></td>
                            <td><%=purchase.productname%></td>
                            <td><%=purchase.quantity%></td>
                            <td>₹<%=purchase.price%></td>
                            <td><%= new Date(purchase.dateofpurchase).toISOString().split('T')[0] %></td>
                            <td><%=purchase.mode%></td>
                    <%})%>
                </tbody>
            </table>

            <!-- Pagination -->
            <nav>
                <ul class="pagination">
                    <li class="page-item"><a class="page-link" href="#">Previous</a></li>
                    <li class="page-item"><a class="page-link" href="#">1</a></li>
                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                    <li class="page-item"><a class="page-link" href="#">Next</a></li>
                </ul>
            </nav>
        </div>
    </div>

</body>
</html>
