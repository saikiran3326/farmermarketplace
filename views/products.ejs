<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Roboto', sans-serif;
            margin: 0;
            background-color: #f3f4f6;
        }

        /* Sidebar styling */
        .sidebar {
            height: 100vh;
            width: 270px;
            background: linear-gradient(45deg, #457b9d, #1d3557);
            color: white;
            position: fixed;
            top: 0;
            left: 0;
            display: flex;
            flex-direction: column;
            padding-top: 20px;
            box-shadow: 2px 0 5px rgba(0, 0, 0, 0.2);
        }

        .sidebar h3 {
            text-align: center;
            font-size: 24px;
            font-weight: bold;
            margin-bottom: 40px;
            color: #f4a261;
        }

        .nav-item a {
            color: white;
            text-decoration: none;
            font-size: 18px;
            padding: 15px 20px;
            display: flex;
            align-items: center;
            gap: 15px;
            transition: all 0.3s ease;
            border-radius: 8px;
        }

        .nav-item a:hover {
            background: rgba(244, 162, 97, 0.9);
            color: #1d3557;
            font-weight: bold;
        }

        /* Main content styling */
        .main-content {
            margin-left: 270px;
            padding: 20px;
        }

        .header {
            background: #f4a261;
            color: #1d3557;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .header h1 {
            font-size: 30px;
            margin: 0;
        }

        .logout-btn {
            background-color: #e63946;
            color: white;
            border: none;
            padding: 10px 20px;
            font-size: 16px;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        .logout-btn:hover {
            background-color: #a11212;
        }

        /* Product Cards */
        .product-grid {
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
            justify-content: center;
            margin-top: 20px;
        }

        .product-card {
            width: 300px;
            background: white;
            border-radius: 10px;
            overflow: hidden;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        .product-card:hover {
            transform: scale(1.05);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
        }

        .product-card img {
            width: 100%;
            height: 200px;
            object-fit: cover;
        }

        .product-card-body {
            padding: 15px;
            text-align: center;
        }

        .product-card-body h5 {
            font-size: 18px;
            margin-bottom: 10px;
            color: #1d3557;
        }

        .product-card-body p {
            font-size: 14px;
            color: #6c757d;
        }

        .product-card-actions {
            display: flex;
            justify-content: space-around;
            padding: 10px;
            border-top: 1px solid #e0e0e0;
            background: #f8f9fa;
        }

        .product-card-actions button {
            border: none;
            padding: 10px 15px;
            border-radius: 5px;
            font-size: 14px;
            cursor: pointer;
            transition: background-color 0.3s ease, color 0.3s ease;
        }

        .btn-add-cart {
            background: #457b9d;
            color: white;
        }

        .btn-add-cart:hover {
            background: #1d3557;
        }

        .btn-buy-now {
            background: #e63946;
            color: white;
        }

        .btn-buy-now:hover {
            background: #a11212;
        }
    </style>
</head>
<body>

    <!-- Sidebar -->
    <div class="sidebar">
        <h3>User Dashboard</h3>
        <ul class="nav flex-column">
            <li class="nav-item">
                <a href="/products"><i class="fas fa-leaf"></i> Products</a>
            </li>
            <li class="nav-item">
                <a href="#orders"><i class="fas fa-shopping-cart"></i> My Orders</a>
            </li>
            <li class="nav-item">
                <a href="#market-prices"><i class="fas fa-chart-line"></i> Market Prices</a>
            </li>
            <li class="nav-item">
                <a href="#profile"><i class="fas fa-user"></i> Profile Settings</a>
            </li>
        </ul>
    </div>

    <!-- Main Content -->
    <div class="main-content">
        <!-- Header Section -->
        <div class="header">
            <h1>Welcome, sai</h1>
            <button class="logout-btn">Logout</button>
        </div>

        <!-- Product Cards Section -->
        <div class="product-grid">
            <!-- Example Product Card -->
            <% products.forEach(product => { %>
                <a href="/addtocart/<%=product.id%>" style="text-decoration: none;">
                <div class="product-card">
                    <% if (product.img) { %>
                        <img src="<%= product.img %>" alt="Product Image">
                    <% } else { %>
                        <img src="https://via.placeholder.com/300x200" alt="Placeholder Image">
                    <% } %>
                    <div class="product-card-body">
                        <h5><%= product.name %></h5>
                        <p>â‚¹<%= product.price %></p>
                    </div>
                    <div class="product-card-actions">
                        <form action="/addtocart/<%=product.id%>" method="GET">
                        <button class="btn-add-cart">Add to Cart</button>
                        </form>
                        <form action="/buy/<%=product.id%>" method="GET">
                            <button class="btn-buy-now">Buy Now</button>
                            </form>
                    </div>
                </div>
                </a>
            <% }) %>
            </div>
        </div>
    </div>

</body>
</html>
